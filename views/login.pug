extends includes/base

block content
  section.vh-100.gradient-custom
    .container.py-5.h-100
      .row.d-flex.justify-content-center.align-items-center.h-100
        .col-12.col-md-8.col-lg-6.col-xl-5
          .card.bg-dark.text-white(style='border-radius: 1rem;')
            .card-body.p-5.text-center
              form.mb-md-5.mt-md-4.pb-5(method='POST' action='/login/check')
                h2.fw-bold.mb-2.text-uppercase Connexion
                p.text-white-50.mb-5 Veuilez entrer votre identifiant et votre mot de passe !
                .form-outline.form-white.mb-4
                  input#email.form-control.form-control-lg(type='email' name='email')
                  label.form-label(for='email') Email
                .form-outline.form-white.mb-4
                  input#password.form-control.form-control-lg(type='password' name='password')
                  label.form-label(for='password') Mot de passe
                p.small.mb-5.pb-lg-2
                  a.text-white-50(href='#!') Mot de passe oublié?
                button.btn.btn-outline-light.btn-lg.px-5(type='submit' name='submit') Connexion
                .d-flex.justify-content-center.text-center.mt-4.pt-1
                  a.text-white(href='#!')
                    i.fab.fa-facebook-f.fa-lg
                  a.text-white(href='#!')
                    i.fab.fa-twitter.fa-lg.mx-4.px-2
                  a.text-white(href='#!')
                    i.fab.fa-google.fa-lg
              div
                p.mb-0
                  | Vous n&apos;avez pas de compte?
                  a.text-white-50.fw-bold(href='/register')  Création

